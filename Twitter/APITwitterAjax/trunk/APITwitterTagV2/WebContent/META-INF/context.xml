<Context>
  <!-- Pool de conexiones usado por los componentes DWR -->  
  <Resource name="jdbc/apitwitterDB"
            auth="Container"
            type="javax.sql.DataSource"
            username="uned"
            password="uned"
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost/apitwitter"
            maxActive="8"
            maxIdle="4"
            defaultAutoCommit="false"
            initialSize="10"
            rollBackOnReturn="true"/>  
</Context>