<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
    "http://getahead.org/dwr/dwr30.dtd">

<dwr>
  <allow>
    <create creator="new" javascript="GetTweets">
      <param name="class" value="uned.java2016.apitwitterweb.dwr.GetTweets"/>
      <include method="cargarTweets"/>
    </create>
    <convert converter="bean" match="uned.java2016.apitwitter.dao.Tweet" >
        	<param name="include" value="tweet_id,text,user,url" />
    </convert>
    <convert converter="bean" match="uned.java2016.apitwitter.dao.User" />
    <convert converter="bean" match="uned.java2016.apitwitter.dao.Url" />
  </allow>
</dwr>